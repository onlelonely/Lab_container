{
    "name": "Data Science (Python and R)",
    "dockerComposeFile": "docker-compose.yml",
    "service": "devcontainer",
    "workspaceFolder": "/workspace",
    "shutdownAction": "stopCompose",
    "updateContentCommand": "bash /workspace/.devcontainer/scripts/install/install-core.sh",
    "customizations": {
        "vscode": {
            "settings": {
                "[python]": {
                    "defaultInterpreterPath": "/opt/conda/bin/python",
                    "editor.defaultFormatter": "ms-python.black-formatter",
                    "editor.formatOnType": true,
                    "editor.formatOnSave": true
                },
                "[jupyter]": {
                    "themeMatplotlibPlots": true,
                    "widgetScriptSources": [
                        "unpkg.com",
                        "jsdelivr.com"
                    ]
                },
                "[r]": {
                    "rterm.linux": "/opt/conda/bin/radian",
                    "r.bracketedPaste": true
                }
            },
            "extensions": [
                "ms-toolsai.jupyter",
                "ms-python.python",
                "ms-python.black-formatter",
                "ms-python.debugpy",
                "ms-python.pyright",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.vscode-jupyter-slideshow",
                "reditorsupport.r",
                "rdebugger.r-debugger",
                "mikhail-arkhipov.r"
            ]
        }
    },
    "remoteUser": "devuser",
    "containerUser": "devuser",
    "containerEnv": {
        "USER": "devuser",
        "HOME": "/home/devuser"
    }
}
