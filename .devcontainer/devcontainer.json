{
    "name": "Data Science (Python and R)",
    "dockerComposeFile": "docker-compose.yml",
    "service": "devcontainer",
    "workspaceFolder": "/workspace",
    "shutdownAction": "stopCompose",
    "features": {
        "ghcr.io/mamba-org/devcontainer-features/micromamba:1": {
            "version": "latest",
            "channels": "conda-forge,bioconda,r",
            "envName": "base"
        },
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.11"
        },
        "ghcr.io/rocker-org/devcontainer-features/r-apt:latest": {
            "vscodeRSupport": "full",
            "installDevTools": true,
            "installRadian": true,
            "installRMarkdown": true,
            "installVscDebugger": true
        },
        "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
            "packages": "r-cran-data.table,r-cran-tidyverse",
            "upgradePackages": true
        }
    },
    "overrideFeatureInstallOrder": [
        "ghcr.io/mamba-org/devcontainer-features/micromamba",
        "ghcr.io/rocker-org/devcontainer-features/apt-packages:1",
        "ghcr.io/rocker-org/devcontainer-features/r-apt"
    ],
    "updateContentCommand": "bash /workspace/.devcontainer/scripts/install/install-core.sh",
    "postCreateCommand": "bash /workspace/.devcontainer/scripts/install/install-extended.sh",
    "customizations": {
        "vscode": {
            "settings": {
                "[python]": {
                    "defaultInterpreterPath": "/opt/conda/bin/python",
                    "editor.defaultFormatter": "ms-python.black-formatter",
                    "editor.formatOnType": true,
                    "editor.formatOnSave": true
                },
                "[jupyter]": {
                    "themeMatplotlibPlots": true,
                    "widgetScriptSources": [
                        "unpkg.com",
                        "jsdelivr.com"
                    ]
                },
                "[r]": {
                    "rterm.linux": "/usr/local/bin/radian",
                    "r.bracketedPaste": true
                }
            },
            "extensions": [
                "ms-toolsai.jupyter",
                "ms-python.python",
                "ms-python.black-formatter",
                "ms-python.debugpy",
                "ms-python.pyright",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.vscode-jupyter-slideshow",
                "reditorsupport.r",
                "rdebugger.r-debugger",
                "mikhail-arkhipov.r"
            ]
        }
    },
    "remoteUser": "devuser",
    "containerUser": "devuser",
    "containerEnv": {
        "USER": "devuser",
        "HOME": "/home/devuser"
    }
}
