# ml.env - 機器學習環境
PROFILE_NAME="Machine Learning"
PROFILE_DESCRIPTION="機器學習環境，包含 scikit-learn, tensorflow, pytorch"

# Python 套件
PYTHON_PACKAGES="scikit-learn tensorflow torch pandas numpy matplotlib seaborn jupyterlab"
PYTHON_REQUIREMENTS_FILE="requirements-ml.txt"

# R 套件
R_PACKAGES="caret randomForest tidyverse"
R_SCRIPT_FILE="ml-packages.R"

# Conda 環境
CONDA_ENV_FILE="environment-ml.yml"

# 啟用的功能
ENABLE_JUPYTER=true
ENABLE_RSTUDIO=false
ENABLE_VSCODE_R=true
ENABLE_VSCODE_PYTHON=true

# 生物資訊工具
ENABLE_BIOINFORMATICS=false