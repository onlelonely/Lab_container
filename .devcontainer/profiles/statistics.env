# statistics.env - 統計分析環境
PROFILE_NAME="Statistics"
PROFILE_DESCRIPTION="統計分析環境，R 為主，包含統計套件"

# Python 套件
PYTHON_PACKAGES="numpy scipy statsmodels pandas matplotlib"
PYTHON_REQUIREMENTS_FILE="requirements-statistics.txt"

# R 套件
R_PACKAGES="tidyverse ggplot2 dplyr car nlme lme4 survival"
R_SCRIPT_FILE="statistics-packages.R"

# Conda 環境
CONDA_ENV_FILE="environment-statistics.yml"

# 啟用的功能
ENABLE_JUPYTER=true
ENABLE_RSTUDIO=true
ENABLE_VSCODE_R=true
ENABLE_VSCODE_PYTHON=true

# 生物資訊工具
ENABLE_BIOINFORMATICS=false