# minimal.env - 基本 Python/R 環境
PROFILE_NAME="Minimal"
PROFILE_DESCRIPTION="基本 Python/R 環境，包含核心套件"

# Python 套件
PYTHON_PACKAGES="numpy pandas matplotlib"
PYTHON_REQUIREMENTS_FILE="requirements-minimal.txt"

# R 套件
R_PACKAGES="base utils"
R_SCRIPT_FILE="minimal-packages.R"

# Conda 環境
CONDA_ENV_FILE="environment-minimal.yml"

# 啟用的功能
ENABLE_JUPYTER=true
ENABLE_RSTUDIO=false
ENABLE_VSCODE_R=true
ENABLE_VSCODE_PYTHON=true

# 生物資訊工具
ENABLE_BIOINFORMATICS=false