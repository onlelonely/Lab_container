# full.env - 完整功能環境
PROFILE_NAME="Full"
PROFILE_DESCRIPTION="完整功能環境，包含所有工具和套件"

# Python 套件
PYTHON_PACKAGES="biopython pysam pyvcf pandas numpy matplotlib seaborn plotly scikit-learn tensorflow torch jupyterlab"
PYTHON_REQUIREMENTS_FILE="requirements-full.txt"

# R 套件
R_PACKAGES="Biostrings GenomicRanges VariantAnnotation tidyverse ggplot2 dplyr caret randomForest"
R_SCRIPT_FILE="full-packages.R"

# Conda 環境
CONDA_ENV_FILE="environment-full.yml"

# 啟用的功能
ENABLE_JUPYTER=true
ENABLE_RSTUDIO=true
ENABLE_VSCODE_R=true
ENABLE_VSCODE_PYTHON=true

# 生物資訊工具
ENABLE_BIOINFORMATICS=true
BIOINFORMATICS_TOOLS="fastqc samtools bcftools bedtools"