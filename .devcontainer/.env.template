# Dev Container Environment Configuration Template
# Copy this file to .env and customize as needed

# Core Configuration
PYTHON_VERSION=3.11
R_VERSION=4.3
MICROMAMBA_VERSION=latest

# Directory Configuration
WORKSPACE_DIR=/workspace
PERSISTENT_STORAGE_DIR=/workspace/permanent_storage
LOG_DIR=/workspace/logs

# Package Installation Settings
INSTALL_BIOCONDUCTOR=true
INSTALL_EXTENDED_PACKAGES=false
PARALLEL_JOBS=4

# Network and Retry Settings
NETWORK_TIMEOUT=60
MAX_RETRY_ATTEMPTS=5
RETRY_DELAY=10

# Development Settings
ENABLE_LOGGING=true
LOG_LEVEL=INFO
ENABLE_VALIDATION=true

# Git Configuration (optional)
GIT_USER_NAME=""
GIT_USER_EMAIL=""

# Custom Package Lists (comma-separated)
CUSTOM_PYTHON_PACKAGES=""
CUSTOM_R_PACKAGES=""
CUSTOM_CONDA_PACKAGES=""